# ===========================================
# Document Management System - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# -------------------------------------------
# Application
# -------------------------------------------
NODE_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:4000
PORT=4000

# -------------------------------------------
# Database (PostgreSQL 18)
# -------------------------------------------
DATABASE_URL=postgresql://dms_user:dms_password@localhost:5432/dms_dev?schema=public

# -------------------------------------------
# Redis (ElastiCache in production)
# -------------------------------------------
REDIS_URL=redis://localhost:6379

# -------------------------------------------
# AWS Configuration
# -------------------------------------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# S3 Storage
S3_BUCKET=dms-documents-dev
S3_REGION=us-east-1
S3_ENDPOINT=  # Optional: for LocalStack or MinIO

# CloudFront (optional for dev)
CLOUDFRONT_DOMAIN=
CLOUDFRONT_KEY_PAIR_ID=
CLOUDFRONT_PRIVATE_KEY=

# -------------------------------------------
# Authentication
# -------------------------------------------
JWT_SECRET=your-super-secret-key-change-in-production-minimum-32-chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=another-super-secret-key-for-refresh-tokens
REFRESH_TOKEN_EXPIRES_IN=7d

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-minimum-32-chars

# -------------------------------------------
# OAuth Providers
# -------------------------------------------
# Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft Azure AD
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=

# -------------------------------------------
# AI Services
# -------------------------------------------
# OpenAI
OPENAI_API_KEY=
OPENAI_API_BASE_URL=https://api.openai.com/v1

# OpenAI Model Configuration
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536

# Embedding Processing
EMBEDDING_MAX_CHUNK_TOKENS=500

# AWS AI Services
AWS_TEXTRACT_REGION=us-east-1
AWS_BEDROCK_REGION=us-east-1

# -------------------------------------------
# Monitoring & Observability
# -------------------------------------------
# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Datadog
DATADOG_API_KEY=
DATADOG_APP_KEY=

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# -------------------------------------------
# Upload Agent (M2M Authentication)
# -------------------------------------------
UPLOAD_AGENT_API_KEY=
UPLOAD_AGENT_API_SECRET=

# -------------------------------------------
# Feature Flags
# -------------------------------------------
ENABLE_AI_PROCESSING=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_REAL_TIME_UPDATES=true

# -------------------------------------------
# Development Only
# -------------------------------------------
# Set to true to skip email verification
SKIP_EMAIL_VERIFICATION=true

# Enable debug logging
DEBUG=false

# Prisma logging
PRISMA_LOG_LEVEL=query,info,warn,error
